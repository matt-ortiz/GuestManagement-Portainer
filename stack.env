# Environment variables for Guest Management App
# These values will be used by docker-compose.yml

# REQUIRED: Change this secret key!
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-KEY

# App Configuration
APP_PORT=8080
DATABASE_URL=sqlite:////app/instance/guests.db
FLASK_ENV=production
FLASK_DEBUG=0

# Email Configuration (optional - remove # to enable)
#MAIL_SERVER=smtp.gmail.com
#MAIL_PORT=587
#MAIL_USE_TLS=true
#MAIL_USERNAME=your-email@gmail.com
#MAIL_PASSWORD=your-app-password

# Slack Integration (optional - remove # to enable)
#SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
#SLACK_CHANNEL_ID=your-channel-id

# Note: Edit these values as needed, then commit and push to Git
# Portainer will automatically use these values when you update the stack
